<script>
var WxParse = require("../../wxParse/wxParse.js");
import wepy from "wepy";
import http from "../../utils/request";
import api from "../../config";
export default class Articledetail extends wepy.page {
  config = {
    navigationBarTitleText: "心理FM"
  };
  data = {
    imgs: null,
    info: null,
    music: null,
    musicStatus: 'stop',
    btn:'../../images/icon_play.png'
  };
  methods = {
    music() {
        if(this.musicStatus==='stop'){
            this.music.play()
            this.musicStatus = 'play'
            this.btn ='../../images/icon_stop.png'
        }else{
            this.music.pause()
            this.musicStatus = 'stop'
            this.btn ='../../images/icon_play.png'
        }
        
    }
  }
  onReady() {
      this.music = wx.createAudioContext('myAudio', this)
      
  }
  async onLoad(options) {
    this.imgs = this.$parent.globalData.imgs;
    this.getDetail(options.id);
  }
  async getDetail(id) {
    const { data } = await http(
      {
        url: api.course.dfm.url,
        method: api.course.dfm.method,
        data: {
          fm_id: id
        }
      },
      true
    );
    if (data.code) {
      this.info = data.info;

      var that = this;
      WxParse.wxParse('article', 'html', data.info.desrc, that, 5);
      this.$apply();
    } else {
      wepy.showModal({
        title: "提示",
        content: data.msg
      });
    }
  }
  onShareAppMessage(res) {
    return {
      title: this.info.title,
      imageUrl: this.info.img,
      success: function(res) {
        wx.showToast({
          title: '分享成功'
        })
      }
    }
  }
}
</script>
