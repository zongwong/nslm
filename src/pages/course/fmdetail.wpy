        <audio src="{{info.url}}" id="myAudio"></audio>
        <view class="databox">
            <image src="{{btn}}" class="play" @tap="music"></image>
            <view class="title">{{info.title}}</view>
            <image src="../../images/0.gif" class="music"></image>
        </view>
    </view>
    <view class="article">
