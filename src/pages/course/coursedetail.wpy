<script>
import wepy from "wepy"
import http from "../../utils/request"
import api from "../../config"
import interfaces from "../../interface/index"

export default class Coursedetail extends wepy.page {
  config = {
    navigationBarTitleText: "课程详情"
  };
  components = {};

  data = {
    info: null,
    imgs: null,
    collectText: '收藏'
  };

  computed = {
    now() {
      return +new Date();
    }
  };

  methods = {
    // 收藏课程
    async collect() {
      const { data } = await http({
        url: api.course.collect.url,
        method: api.course.collect.method,
        data: {
          sid: this.info.id
        }
      },true)
      if ( data.code ) {
        this.collectText = '已收藏'
        this.$apply()
        wepy.showToast({
          title: '收藏成功'
        })
      }
    }
  };

  events = {};
  async onLoad(options) {
    this.imgs = this.$parent.globalData.imgs
    this.getDetail(options.id)
  }
  async getDetail(id) {
    const { data } = await http({
      url: api.course.detail.url,
      method: api.course.detail.method,
      data: {
        sid: id
      }
    },true)
    if ( data.code ) {
      this.info = data.info
      this.$apply()
    }else{
      wepy.showModal({
        title: '提示',
        content: data.msg
      })
    }
  }
}
</script>
