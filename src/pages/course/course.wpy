    <view class="food_nav">
      <tabNav :navs="navs"></tabNav>
    </view>
    <view class="food_box">
      <image class="food_bg" src="{{food.img}}"></image>
      <view class="content_box">
        <!-- <block wx:for="{{foods}}" wx:key="food_{{index}}">
