    </navigator>
  </view>
</template>

<script>
  import wepy from 'wepy'
  import http from "../../utils/request"
  import _ from "../../utils/tools"
  import api from "../../config"
  import tabNav from "../../components/index/tabNav"
  export default class Course extends wepy.page {
      config = {
        navigationBarTitleText: "产后恢复课"
      };
      components = {
        tabNav: tabNav
      }
      data = {
        navs: [
          {
              text:'早餐',
              selected:true,
          },{
              text:'午餐',
              selected:false,
          },{
              text:'加餐',
              selected:false,
          },
          {
              text:'晚餐',
              selected:false,
          }
        ],
        imgs: {},
        type: 1,
        foods: [],
        food: {}
      }
      events = {
        navTapEvent(index) {
          this.type = index + 1
          this.$apply()
          this.getFood()
        }
      }
      methods = {
        change() {
          let index = _.random(0,this.foods.length - 1)
          this.food = this.foods[index]
          
        }
      }
      async onLoad() {
        this.imgs = this.$parent.globalData.imgs
        this.$apply()
        this.getFood()
      }
      async getFood() {
        const { data } = await http({
          url: api.mood.food.url,
          method: api.mood.food.method,
          data: {
            type: this.type
          }
        })
        if( data.code ){
          this.foods = data.info
          this.food = data.info[0]
          this.$apply()
        }
      }
  }
</script>
