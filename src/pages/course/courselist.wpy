<style lang="scss">
.listbox{
  margin: 26rpx 36rpx 0;
  .list-item{
    width: 326rpx;
    height: 240rpx;
    border-radius: 12rpx;
    box-sizing: border-box;
    border: 2rpx solid #ececec;
    background: #fff;
    overflow: hidden;
    position: relative;
    display: inline-block;
    margin-bottom: 26rpx;
    &:nth-child(2n-1){
      margin-right: 26rpx;
    }
    .post{
      width: 100%;
      height: 194rpx;
    }
    .text{
      width: 100%;
      height: 194rpx;
      background: rgba(0,0,0,.5);
      position: absolute;
      top: 0;
      left: 0;
      .coursename{
        color: #fff;
        text-align: center;
        font-size: 30rpx;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%,-50%);
      }
    }
    .info{
      font-size:22rpx;
      display: flex;
      justify-content: space-between;
      padding: 0 16rpx;
      .pinklight{
        background: url(data:image/png;base64,) 0 center no-repeat;
        background-size: 26rpx 20rpx;
        padding-left: 30rpx;
      }
    }
  }
}
</style>
<template>
  <view class="courselist">
    <tabNav :navs="navs"></tabNav>
    <view class="listbox">
      <navigator class="list-item" wx:for="{{courseList}}" wx:key="item_{{index}}" url="/pages/course/clist?id={{item.id}}">
        <image class="post" src="{{imgs.defaultlist}}"></image>
        <view class="text">
          <view class="coursename">{{item.name}}</view>
        </view>
        <view class="info">
          <text class="greyColor">2017/11/21</text>
          <text class="pinklight">300</text>
        </view>
      </navigator>
    </view>
  </view>
</template>

<script>
  import wepy from 'wepy'
  import tabNav from "../../components/index/tabNav"
  import http from "../../utils/request"
  import api from "../../config"
  export default class Courselist extends wepy.page {
      config = {
        navigationBarTitleText: "女神课堂"
      };
      components = {
        tabNav: tabNav
      }
      data = {
        type:'',
        imgs: null,
        courseList: null,
        navs: [
          {
            text:'按热度',
            selected:true,
          },{
            text:'按时间',
            selected:false,
          }
        ]
      }
      onLoad(options) {
        this.imgs = this.$parent.globalData.imgs
        this.type = options.type
        this.getCourseList(options.type)
      }
      async getCourseList(type) {
        const { data } = await http({
          url: api.course.list.url,
          method: api.course.list.method,
          data: {
            parent_type: type
          }
        },true)
        if ( data.code ) {
          this.courseList = data.info
          this.$apply()
        }
      }
  }
</script>
